<section id="why" class="bg-[#FAF9F6] px-6 py-24">
    <div class="max-w-7xl mx-auto">
      
      <!-- Section header -->
      <div class="mb-16">
        <p class="text-[#F5A524] font-medium mb-3">لماذا نحن</p>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900">

<style>
  .carousel-container {
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    position: relative;
    /* التظليل الجانبي لجعل الدخول والخروج سلساً */
    mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
  }

  .carousel-track {
    display: inline-flex;
    align-items: center;
    gap: 80px; /* زيادة المسافة بين الشعارات */
    animation: scroll 30s linear infinite;
    width: max-content;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* تحريك لليمين في حالة RTL (العربية) لضمان عدم حدوث قفزة */
  :global([dir="rtl"]) .carousel-track {
    animation: scroll-rtl 30s linear infinite;
  }

  @keyframes scroll-rtl {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(50%);
    }
  }

  :global(.carousel-track img) {
    height: 60px !important;
    width: 120px !important;
    object-fit: contain !important;
    flex-shrink: 0;
    
  }
</style>

